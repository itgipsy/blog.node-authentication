//- includes/loginform.pug

form(action='/auth/register' method='POST')
  .form-group
    label(for='email_input') Email address
    input.form-control#email_input(type='email' name='email' placeholder='Enter your email address')
  .form-group
    label(for='password_input') Password
    input.form-control#password_input(type='password' name='password' placeholder='Enter your password')
  .form-group
    label(for='password_confirm_input') Re-enter password
    input.form-control#password_confirm_input(type='password' name='confirm_password' placeholder='Repeat your password')
  button.btn.btn-primary#login_button(type='submit') Register

